{
    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/venv": true,
    },
    "search.exclude": {
        "venv": true
    },
    "[javascript]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    "[html]": {
        "editor.formatOnSave": true,
        "editor.wordWrap": "on",
        "editor.tabSize": 2
    },
    "[css]": {
        "editor.tabSize": 2
    },
    "[python]": {
        "editor.tabSize": 4
    },
    "python.pythonPath": "${workspaceFolder}\\ENV\\Scripts\\python3.exe",
    "git.ignoreLimitWarning": true
}